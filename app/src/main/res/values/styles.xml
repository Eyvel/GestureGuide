<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- styles.xml -->
    <style name="CategoryCard">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">5dp</item>

    </style>

    <style name="CategoryCardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CategoryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoryImage">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>



        <style name="CircularShape" parent="">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">50%</item> <!-- Half of width/height for a circle -->
            <item name="strokeColor">@color/dark_orange</item> <!-- Orange color for stroke -->
            <item name="strokeWidth">4dp</item> <!-- Stroke width -->
        </style>



</resources>