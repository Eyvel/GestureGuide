<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/YellowOrange" />
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>