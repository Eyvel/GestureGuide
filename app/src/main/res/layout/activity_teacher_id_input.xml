<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bginput"
        android:padding="16dp"
        android:gravity="center">

        <!-- Card Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginTop="16dp">

            <!-- Authentication Text and Subtitle inside the card -->
            <TextView
                android:id="@+id/authenticationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher ID"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/authenticationSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your Teacher ID and wait\nfor the Teacher to admit you.\nIf no Teacher Id choose user type user. "
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Input for Verification Code, Centered -->
            <EditText
                android:id="@+id/numberInput"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:hint="Teacher ID"
                android:inputType="number"
                android:padding="10dp"
                android:background="@drawable/edittext_bkg"
                android:layout_gravity="center" />

            <!-- Horizontal Layout for Spinner and Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <!-- Spinner for User/Student Selection beside the button -->
                <Spinner
                    android:id="@+id/userTypeSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:entries="@array/user_type_options" />

                <!-- Resend Code Button -->
                <Button
                    android:id="@+id/sendTeacherIdBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="send"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Back Button in the upper-left corner -->
    <ImageButton
        android:id="@+id/teacherID_back_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:src="@drawable/back_btn"
        android:background="@android:color/transparent"
        android:contentDescription="Back" />
</FrameLayout>
