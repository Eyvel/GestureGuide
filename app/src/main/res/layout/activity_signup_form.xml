<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Personal Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"

                android:textSize="15sp"
                android:textColor="@color/black" />


            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Last Name" />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"

                android:textSize="15sp"
                android:textColor="@color/black" />


            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="First Name" />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Middle Name"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/middle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Middle Name" />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extension"

                android:textSize="15sp"
                android:textColor="@color/black" />


            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/ext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Extension (Leave Blank if none)" />

            <!-- Gender Radio Buttons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/gender_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    style="@style/CustomRadioButton"

                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/black" />

                <RadioButton
                    style="@style/CustomRadioButton"

                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="@color/black" />

                <RadioButton
                    style="@style/CustomRadioButton"

                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textColor="@color/black" />
            </RadioGroup>

            <!-- Other Fields -->
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number"

                android:textSize="15sp"
                android:textColor="@color/black" />
            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/contact_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Contact Number"
                android:inputType="number"/>

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_bkg"

                android:textSize="19dp"
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Date of Birth (Click to set)"
                android:inputType="date"/>

            <!-- SPED and PWD Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPED"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/sped_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    style="@style/CustomRadioButton"

                    android:id="@+id/sped_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YES"
                    android:textColor="@color/black" />

                <RadioButton
                    style="@style/CustomRadioButton"

                    android:id="@+id/sped_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:textColor="@color/black" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PWD"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/pwd_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    style="@style/CustomRadioButton"

                    android:id="@+id/pwd_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YES"
                    android:textColor="@color/black" />

                <RadioButton
                    style="@style/CustomRadioButton"

                    android:id="@+id/pwd_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:textColor="@color/black" />
            </RadioGroup>

            <!-- Permanent Address Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permanent Address"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address(House No/Street)"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Address (House #)" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Province/Region"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/province"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Province/Region" />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Municipality/City"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Municipality/City" />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baranggay"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/barangay"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Baranggay" />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zip Code"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/zipcode"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="number"
                android:hint="Zip Code" />



            <!-- Educational Background Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Educational Background"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LRN"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/lrn"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="LRN" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/program"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Program" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nationality"

                android:textSize="15sp"
                android:textColor="@color/black" />
            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/nationality"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nationality" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Name"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/schoolName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="School Name" />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Address"

                android:textSize="15sp"
                android:textColor="@color/black" />
            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/schoolAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="School Address" />


            <!-- Parent / Guardian Background Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parents/Guardian Background"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father's Last Name"

                android:textSize="15sp"
                android:textColor="@color/black" />
            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                
                android:id="@+id/father_lastname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Father's Last Name" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father's First Name"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/father_firstname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Father's First Name" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father's Middle Name"

                android:textSize="15sp"
                android:textColor="@color/black" />
            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/father_middlename"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Father's Middle Name" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father's Occupation"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/father_occupation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Father's Occupation" />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mother's Last Name"

                android:textSize="15sp"
                android:textColor="@color/black" />
            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/mother_lastname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Mother's Last Name" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mother's First Name"

                android:textSize="15sp"
                android:textColor="@color/black" />
            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/mother_firstname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Mother's First Name" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mother's Middle Name"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/mother_middlename"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Mother's Middle Name" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mother's Occupation"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/mother_occupation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Mother's Occupation" />


            <TextView
                android:id="@+id/civilStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent Civil Status"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <Spinner


                android:id="@+id/civilStatusSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian's Last Name"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp" 
  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/guardian_lastName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Guardian's Last Name" />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian's First Name"

                android:textSize="15sp"
                android:textColor="@color/black" />
            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/guardians_firstname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Guardian's First Name" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian's Middle Name"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/guardians_middlename"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Guardian's Middle Name" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian's Contact Number"

                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/guardians_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Guardian's Contact Number"
                android:inputType="number"/>


            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian's Occupation"

                android:textSize="15sp"
                android:textColor="@color/black" />
            <EditText 
 android:textColor="@color/black"  
 android:padding="10dp"  
android:background="@drawable/edittext_bkg"
android:layout_margin="5dp"
                android:id="@+id/guardian_occupation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Guardian's Occupation" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/signup_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/dark_blue"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
