<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Personal Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Last Name" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="First Name" />

            <EditText
                android:id="@+id/middle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Middle Name" />

            <EditText
                android:id="@+id/ext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Extension" />

            <!-- Gender Radio Buttons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#333333" />

            <RadioGroup
                android:id="@+id/gender_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="#333333" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="#333333" />

                <RadioButton
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textColor="#333333" />
            </RadioGroup>

            <!-- Other Fields -->
            <EditText
                android:id="@+id/contact_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Contact Number"
                android:inputType="number"/>

            <TextView
                android:textSize="20dp"
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Date of Birth (Click to set)"
                android:inputType="date"/>

            <!-- SPED and PWD Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPED"
                android:textColor="#333333" />

            <RadioGroup
                android:id="@+id/sped_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/sped_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YES"
                    android:textColor="#333333" />

                <RadioButton
                    android:id="@+id/sped_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:textColor="#333333" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PWD"
                android:textColor="#333333" />

            <RadioGroup
                android:id="@+id/pwd_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/pwd_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YES"
                    android:textColor="#333333" />

                <RadioButton
                    android:id="@+id/pwd_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:textColor="#333333" />
            </RadioGroup>

            <!-- Permanent Address Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permanent Address"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Address (House #/Street/Building)" />

            <EditText
                android:id="@+id/province"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Province/Region" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Municipality/City" />

            <EditText
                android:id="@+id/barangay"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Barangay" />

            <EditText
                android:id="@+id/zipcode"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="number"
                android:hint="Zip Code" />


            <!-- Educational Background Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Educational Background"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/lrn"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="LRN" />

            <EditText
                android:id="@+id/program"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Program" />
            <EditText
                android:id="@+id/nationality"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nationality" />

            <EditText
                android:id="@+id/schoolName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="School Name" />

            <EditText
                android:id="@+id/schoolAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="School Address" />


            <!-- Parent / Guardian Background Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parents/Guardian Background"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/father_lastname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Father's Last Name" />

            <EditText
                android:id="@+id/father_firstname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Father's First Name" />
            <EditText
                android:id="@+id/father_middlename"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Father's Middle Name" />

            <EditText
                android:id="@+id/father_occupation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Father's Occupation" />

            <EditText
                android:id="@+id/mother_lastname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Mother's Last Name" />
            <EditText
                android:id="@+id/mother_firstname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Mother's First Name" />

            <EditText
                android:id="@+id/mother_middlename"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Mother's Middle Name" />

            <EditText
                android:id="@+id/mother_occupation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Mother's Occupation" />
            <TextView
                android:id="@+id/civilStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent Civil Status"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/civilStatusSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/guardian_lastName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Guardian's Last Name" />
            <EditText
                android:id="@+id/guardians_firstname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Guardian's First Name" />

            <EditText
                android:id="@+id/guardians_middlename"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Guardian's Middle Name" />

            <EditText
                android:id="@+id/guardians_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Guardian's Contact Number"
                android:inputType="number"/>



            <EditText
                android:id="@+id/guardian_occupation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Guardian's Occupation" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/signup_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:backgroundTint="#007AFF"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
